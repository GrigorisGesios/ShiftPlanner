<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Manager.ManagerLayout"
    android:background="@drawable/bg1">

    <Button
        android:id="@+id/btnGiveRestrictions"
        android:layout_width="245dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="189dp"
        android:background="@drawable/btn1"
        android:drawableLeft="@drawable/ic_give"
        android:text="Give Restrictions"
        android:textColor="@color/white" />

    <Button
        android:id="@+id/btnReviewRequirements"
        android:layout_width="245dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnGiveRestrictions"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="36dp"
        android:background="@drawable/btn1"
        android:drawableLeft="@drawable/ic_review"
        android:text="Review Requirements"
        android:textColor="@color/white" />

    <Button
        android:id="@+id/btnPlanFinalSchedule"
        android:layout_width="245dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnReviewRequirements"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="33dp"
        android:background="@drawable/btn1"
        android:drawableLeft="@drawable/ic_schedule"
        android:text="Plan Final Schedule"
        android:textColor="@color/white" />

    <Button
        android:id="@+id/btnHireEmployee"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="134dp"
        android:text="Hire" />

    <Button
        android:id="@+id/btnFireEmployee"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="75dp"
        android:text="Fire" />

    <Button
        android:id="@+id/btnViewFinalSchedule2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnPlanFinalSchedule"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="266dp"
        android:background="@drawable/btn1"
        android:drawableLeft="@drawable/ic_final"
        android:text=" View Final Schedule"
        android:textColor="#FFFFFF" />

</RelativeLayout>