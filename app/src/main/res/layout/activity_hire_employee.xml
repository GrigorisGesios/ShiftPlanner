<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Manager.HireEmployee"
    android:background="@drawable/bg2">

    <EditText
        android:id="@+id/edTextGiveLastName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Επώνυμο:"
        android:inputType="textPersonName"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:layout_below="@+id/edTextGiveName"/>

    <EditText
        android:id="@+id/edTextGiveId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Id:"
        android:inputType="textPersonName"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:layout_below="@+id/edTextGiveLastName" />

    <EditText
        android:id="@+id/edTextGiveProf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Ειδικότητα:"
        android:inputType="textPersonName"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:layout_below="@+id/edTextGiveId"/>

    <EditText
        android:id="@+id/edTextGiveName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Όνομα:"
        android:inputType="textPersonName"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="135dp"
        app:layout_constraintTop_toTopOf="parent"/>

    <Button
        android:id="@+id/btnConfirmHireEmployee"
        android:layout_width="210dp"
        android:layout_height="wrap_content"
        android:text="Hire Employee"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/edTextGiveProf"
        android:layout_marginTop="60dp"
        android:background="@drawable/btn1"
        />

</RelativeLayout>